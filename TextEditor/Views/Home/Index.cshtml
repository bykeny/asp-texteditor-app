@{
    ViewData["Title"] = "Home Page";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white shadow-xl rounded-2xl p-10 max-w-lg w-full text-center">
        <h1 class="text-4xl font-bold text-blue-600 mb-4">Welcome to DocuPro!</h1>
        <p class="text-gray-600 mb-6">
            Create, edit, and manage your documents with ease.
            Start by logging into your account or registering if you're new!
        </p>
        <div class="flex justify-center gap-4">
            <a href="/Identity/Account/Login" class="px-6 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg shadow-md transition">
                Login
            </a>
            <a href="/Identity/Account/Register" class="px-6 py-2 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-lg shadow-md transition">
                Register
            </a>
        </div>
    </div>
