<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DocuPro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TextEditor.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.ico" />
    <script src="https://cdn.tiny.cloud/1/4od3y77mftakn2cdxb38hveyz62jzgap0xiyo91sm6a85uz1/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
          selector: 'textarea#tiny',
          plugins: [
            'a11ychecker', 'accordion', 'advlist', 'anchor', 'autolink', 'autosave',
            'charmap', 'code', 'codesample', 'directionality', 'emoticons', 'exportpdf',
            'exportword', 'fullscreen', 'help', 'image', 'importcss', 'importword',
            'insertdatetime', 'link', 'lists', 'markdown', 'math', 'media', 'nonbreaking',
            'pagebreak', 'preview', 'quickbars', 'save', 'searchreplace', 'table',
            'visualblocks', 'visualchars', 'wordcount'
          ],
          toolbar: 'undo redo | accordion accordionremove | ' +
            'importword exportword exportpdf | math | ' +
            'blocks fontfamily fontsize | bold italic underline strikethrough | ' +
            'align numlist bullist | link image | table media | ' +
            'lineheight outdent indent | forecolor backcolor removeformat | ' +
            'charmap emoticons | code fullscreen preview | save print | ' +
            'pagebreak anchor codesample | ltr rtl',
          menubar: 'file edit view insert format tools table help'
        })
    </script>
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        /* Styling for document cards */
        .doc-card {
            width: 160px;
            height: 220px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
        }

            .doc-card:hover {
                transform: scale(1.05);
            }

        /* Custom button styling */
        .btn-primary, .btn-danger, .btn-info {
            padding: 10px 20px;
            border-radius: 6px;
        }

        footer {
            box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
            position: relative;
            bottom: 0;
            width: 100%;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Docs" asp-action="Index">DocuPro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Docs" asp-action="Index">Home</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3 container">
        @RenderBody()
    </main>

    <footer class="border-top py-3 bg-light text-center">
        <div class="container">
            <span class="text-muted">&copy; 2025 - DocuPro</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
