@model IEnumerable<TextEditor.Models.Doc>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1 class="text-center mb-4">Your Documents</h1>

    <!-- Create New Document -->
    <div class="d-flex justify-content-center mb-4">
        <a class="doc-card d-flex flex-column justify-content-center align-items-center bg-light text-dark text-decoration-none" asp-action="Create">
            <span style="font-size: 60px;">+</span>
            <span class="fw-bold mt-2">New Document</span>
        </a>
    </div>

    <hr />

    <!-- List Existing Documents -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <a class="doc-card d-flex flex-column justify-content-center align-items-center bg-primary text-white text-decoration-none" asp-action="Edit" asp-route-id="@item.Id">
                    <span style="font-size: 50px;">📝</span>
                    <span class="fw-bold mt-2">@item.Title</span>
                </a>
            </div>
        }
    </div>
</div>
