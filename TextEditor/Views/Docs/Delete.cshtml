@model TextEditor.Models.Doc

@{
    ViewData["Title"] = "Delete Document";
}

<div class="container text-center">
    <h2 class="text-danger">⚠️ Confirm Deletion</h2>
    <p class="lead">Are you sure you want to delete "<strong>@Model.Title</strong>"?</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label fw-bold">Document Content</label>
            <textarea id="tiny" class="form-control" style="width: 100%; height: 40vh" asp-for="Content" disabled></textarea>
        </div>

        <div class="d-flex justify-content-center gap-3">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
