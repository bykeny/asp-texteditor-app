@model TextEditor.Models.Doc
@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> userManager;

@{
    ViewData["Title"] = "Create Document";
}

<div class="container">
    <h2 class="mb-4 text-center">Create a New Document</h2>

    <form asp-action="Create" class="card shadow-lg p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label class="form-label fw-bold">Title</label>
            <input asp-for="Title" class="form-control" value="Untitled Document" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Content</label>
            <textarea id="tiny" style="width: 100%; height: 60vh" asp-for="Content"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="UserId" value="@userManager.GetUserId(User)" />

        <div class="d-flex justify-content-between">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a class="btn btn-info" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
